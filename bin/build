#!/bin/bash

# exit on error, unset vars
set -eu
# exit early for errors in pipelines
set -o pipefail

usage() {
    cat << EOF
usage: $0 [-n] [-d diff] major_version minor_version patch_version
EOF
}

# Options
cache=
diff=
run_tests=
while getopts ":nd:tvh" opt; do
    case $opt in
        n)
            cache=--no-cache
            ;;
        d)
            diff=$OPTARG
            ;;
        t)
            run_tests=yes
            ;;
        v)
            set -x
            ;;
        h)
            usage
            exit
            ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            usage
            exit 1
            ;;
        :)
            echo "Option -$OPTARG requires an argument." >&2
            exit 1
            ;;
    esac
done

# Positional arguments
shift "$((OPTIND-1))"
if [ "$#" -ne 3 ]; then
    echo "Illegal number of parameters"
    usage
    exit 1
fi
version_major=$1
version_minor=$2
version_patch=$3

# v_minor=$version_major.$version_minor
v_full=$version_major.$version_minor.$version_patch
echo
echo Building "$v_full"
echo

# set -o xtrace

## Dockerfile

write_version() {
    sed -i '' -E "s/^FROM httpd:([0-9\.]+)$/FROM httpd:${v_full}/" "$1"
}
write_version Dockerfile

## Build

# build image
docker build $cache -f Dockerfile -t "drupal-web:httpd-${v_full}" .

# post-build config
docker run --rm "drupal-web:httpd-${v_full}" /bin/cat /usr/local/apache2/conf/httpd.conf-default > \
    conf/httpd.conf-default

# tests
if [[ ! -z "$run_tests" ]]; then

    network=docker-drupal-web
    docker network create -d bridge "$network" > /dev/null
    php=$(docker run --rm -d --network "$network" --name php -v /var/www/html tbfisher/drupal-php:7.1-dev)
    httpd=$(docker run --rm -d -P --expose 80 --network "$network" --volumes-from "$php" -v /var/www/html "drupal-web:httpd-${v_full}")

    # curl phpinfo
    docker exec "$httpd" /bin/sh -c 'apt-get -qq update; apt-get -yqq install curl; echo "<?php phpinfo();" > /var/www/html/index.php' > /dev/null
    test_phpinfo=$(docker exec "$httpd" /bin/sh -c 'curl -sSIL http://localhost | grep "HTTP/1.1 200 OK"' | sed -e 's/[[:space:]]*$//')

    # clean up
    docker rm -f "$httpd" "$php" > /dev/null
    docker network rm "$network" > /dev/null

    # test output
    if [ "$test_phpinfo" != 'HTTP/1.1 200 OK' ]; then
        echo curl phpinfo failed.
        exit 1
    fi

    echo tests pass.
fi

set +e

# examine config
if [[ -n "$diff" ]]; then
    $diff conf/httpd.conf-default       conf/httpd.conf-development            &
fi
